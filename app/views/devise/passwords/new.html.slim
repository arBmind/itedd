.row
  .large-12.columns
    h2 Passwort vergessen?
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      = f.input :email
      = f.button :submit, 'Abschicken'

.row
  .large-12.columns
    = render 'devise/shared/links'
